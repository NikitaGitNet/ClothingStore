@model ProductListViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="header_space"></div>

<h2>Сортировать по: </h2>
<p>
    <a asp-controller="Products" asp-action="SortByBrand">Бренду</a>
    <a asp-controller="Products" asp-action="SortBySize">Размеру</a>
    <a asp-controller="Products" asp-action="SortByPrise">Цене</a>
</p>
<div class="productList">
    @foreach (var entity in Model.Products)
    {
            <div class="produktcard">
                <img src="~/images/@entity.TitleImagePath" alt="">
                <p>@entity.Name</p>
                <p>@entity.Brand</p>
                <p>@entity.Price рублей</p>
                <input type="submit" class="evenboxinner" value="SALE">
            </div>
    }
</div>
